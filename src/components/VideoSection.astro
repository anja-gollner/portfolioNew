<section class="relative h-[500px] overflow-hidden flex items-center justify-center text-center w-full">
  <video
    id="parallaxVideo"
    class="absolute top-0 left-1/2 min-w-full min-h-full -translate-x-1/2 object-cover filter blur-sm brightness-75 will-change-transform"
    autoplay
    muted
    loop
    playsinline
  >
    <source src="/video/coding.mp4" type="video/mp4" />
    Dein Browser unterstützt keine HTML5-Videos.
  </video>

  <div class="absolute inset-0 bg-black bg-opacity-30 z-10"></div>

  <div class="relative z-20 max-w-3xl px-5 text-white">
    <h2 class="text-5xl font-semibold leading-tight">
      Jede Zeile Code ist ein <span class="text-primary font-extrabold">Versprechen.</span>
    </h2>
    <p class="mt-2 text-lg md:text-xl opacity-80">
      Mit Weitblick, Verantwortung und echtem Verständnis.
    </p>
  </div>

  <script is:inline>
    window.addEventListener('scroll', () => {
      const video = document.getElementById('parallaxVideo');
      if (!video) return;

      const scrollY = window.scrollY;
      const offset = scrollY * -0.17;

      video.style.transform = `translate(-50%, ${offset}px)`;
    });
  </script>
</section>





