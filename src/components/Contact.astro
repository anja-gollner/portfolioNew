---
const { id = "" } = Astro.props;
---

<section id={id} class="w-full bg-white relative overflow-hidden min-h-[70vh]">
  <div class="absolute inset-0 lg:w-1/3">
    <img 
      src="/img/smoke-dark.png" 
      alt="" 
      class="w-full h-full object-cover object-center lg:opacity-90 opacity-90"
    />
  </div>

  <div class="container mx-auto max-w-6xl h-full">
    <div class="flex flex-col lg:flex-row h-full">
      <div class="lg:w-1/3 hidden lg:block"></div>

      <div class="lg:w-2/3 lg:pl-12 h-full py-12 px-6 overflow-y-auto bg-white/70 lg:bg-transparent backdrop-blur-sm lg:backdrop-blur-none">
        <div class="mb-8">
          <h2 class="text-lg tracking-widest text-primary mb-2">KONTAKT AUFNEHMEN</h2>
          <h3 class="text-3xl font-bold text-gray-900">Lass uns sprechen</h3>
          <p class="mt-2 text-gray-700 max-w-md text-sm">
            Du hast ein Projekt im Sinn oder Fragen zu meinen Services? Schreib mir eine Nachricht und ich melde mich innerhalb von 24 Stunden bei dir.
          </p>
        </div>

        <form class="space-y-6">
          <div class="relative">
            <input 
              type="text" 
              id="name" 
              name="name"
              class="w-full px-0 py-2 bg-transparent border-0 border-b border-gray-300 focus:border-primary focus:ring-0 peer transition-colors duration-300"
              placeholder=" "
              required
            >
            <label 
              for="name" 
              class="absolute left-0 -top-4 text-gray-600 text-sm transition-all duration-300 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-2 peer-focus:-top-4 peer-focus:text-primary peer-focus:text-sm"
            >
              Dein Name
            </label>
          </div>

          <div class="relative">
            <input 
              type="email" 
              id="email" 
              name="email"
              class="w-full px-0 py-2 bg-transparent border-0 border-b border-gray-300 focus:border-primary focus:ring-0 peer transition-colors duration-300"
              placeholder=" "
              required
            >
            <label 
              for="email" 
              class="absolute left-0 -top-4 text-gray-600 text-sm transition-all duration-300 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-2 peer-focus:-top-4 peer-focus:text-primary peer-focus:text-sm"
            >
              Email Adresse
            </label>
          </div>

          <div class="relative">
            <select 
              id="project" 
              name="project"
              class="w-full px-0 py-2 bg-transparent border-0 border-b border-gray-300 focus:border-primary focus:ring-0 appearance-none peer transition-colors duration-300"
            >
              <option value="" selected disabled hidden></option>
              <option value="website">Webseite</option>
              <option value="webapp">Webanwendung</option>
              <option value="consulting">Beratung</option>
              <option value="other">Anderes</option>
            </select>
            <label 
              for="project" 
              class="absolute left-0 -top-4 text-gray-600 text-sm transition-all duration-300 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-2 peer-focus:-top-4 peer-focus:text-primary peer-focus:text-sm"
            >
              Projektart
            </label>
            <div class="absolute right-0 top-3 pointer-events-none">
              <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </div>
          </div>

          <div class="relative">
            <textarea 
              id="message" 
              name="message"
              rows="3"
              class="w-full px-0 py-2 bg-transparent border-0 border-b border-gray-300 focus:border-primary focus:ring-0 peer resize-none transition-colors duration-300"
              placeholder=" "
              required
            ></textarea>
            <label 
              for="message" 
              class="absolute left-0 -top-4 text-gray-600 text-sm transition-all duration-300 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-2 peer-focus:-top-4 peer-focus:text-primary peer-focus:text-sm"
            >
              Nachricht
            </label>
          </div>

          <!-- Submit Button -->
          <button 
            type="submit"
            class="w-full bg-primary text-white py-3 px-4 rounded-lg font-medium hover:bg-primary-dark transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 text-sm"
          >
            Nachricht senden
          </button>
        </form>
      </div>
    </div>
  </div>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      const inputs = document.querySelectorAll('input, textarea, select');
      
      inputs.forEach(input => {
        if (input.value) {
          const label = input.previousElementSibling;
          label.classList.add('-top-4', 'text-sm');
          label.classList.remove('top-2', 'text-base');
        }
        
        input.addEventListener('input', (e) => {
          const label = e.target.previousElementSibling;
          if (e.target.value) {
            label.classList.add('-top-4', 'text-sm');
            label.classList.remove('top-2', 'text-base');
          } else {
            label.classList.remove('-top-4', 'text-sm');
            label.classList.add('top-2', 'text-base');
          }
        });
      });
    });
  </script>
</section>