---
const { id = "" } = Astro.props;
const steps = [
  {
    title: "Anfrage",
    description: "Sie teilen uns Ihre Idee mit.",
  },
  {
    title: "Beratungsgespräch",
    description: "Wir besprechen Ihre Vision und Ziele.",
  },
  {
    title: "Konzeption",
    description: "Wir entwickeln ein maßgeschneidertes Konzept.",
  },
  {
    title: "Umsetzung",
    description: "Ihr Projekt wird professionell umgesetzt.",
  },
];
---

<section id={id} class="bg-black text-primary pt-20 pb-6 px-6 timeline-section">
  <div class="max-w-7xl mx-auto relative">
    
    <div class="timeline-line"></div>

    <div class="flex flex-col gap-14 md:flex-row md:justify-between relative z-10 steps-container">
      {steps.map((step, i) => (
        <div class="flex items-start md:items-center flex-row md:flex-col text-left md:text-center w-full md:w-1/4 step">
        
          <div class="step-dot"></div>
          
          <div class="ml-4 md:ml-0">
            <h4 class="text-white font-semibold">{step.title}</h4>
            <p class="text-sm mt-1 text-primary text-opacity-90 max-w-[200px]">
              {step.description}
            </p>
          </div>

        </div>
      ))}
    </div>
  </div>

  <script type="module" is:inline>
    const section = document.querySelector(".timeline-section");
    const line = section.querySelector(".timeline-line");

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            line.classList.add("animate-line");
          } else {
            line.classList.remove("animate-line");
          }
        });
      },
      {
        threshold: 0.3, 
      }
    );

    observer.observe(section);
  </script>
</section>

<style>
  .timeline-section {
    position: relative;
  }

  .timeline-line {
    position: absolute;
    background: #F6DCC6;
    top: 0.7rem; 
    left: 1rem;
    right: 1rem;
    height: 3px;
    transform-origin: left;
    transform: scaleX(0);
    transition: transform 1.2s ease-out;
    z-index: 5;
  }

  .timeline-line.animate-line {
    transform: scaleX(1);
  }

  .step-dot {
    width: 1rem;
    height: 1rem;
    background-color: #F6DCC6;
    border-radius: 9999px;
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .steps-container {
    position: relative;
    z-index: 10;
  }

  @media (max-width: 768px) {
    .timeline-line {
      top: auto;
      left: 0.4rem;
      right: auto;
      width: 3px;
      height: calc(100% - 2.5rem);
      transform-origin: top;
      transform: scaleY(0);
      transition: transform 1.2s ease-out;
    }

    .timeline-line.animate-line {
      transform: scaleY(1);
    }

    .step-dot {
      margin-top: 0;
      margin-left: 0;
      margin-bottom: 1.5rem;
    }

    .steps-container {
      flex-direction: column;
    }
  }
</style>


