---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ServiceCard from '../components/ServiceCard.astro';
import Hero from '../components/Hero.astro'
import '../styles/global.css';
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Portfolio und Dienstleistungen von Anja Gollner – Webdesign, Beratung & mehr." />
    <title>Anja Gollner</title>
  </head>


  <body class="bg-neutral text-text">
    <Header />

    <main class="container mx-auto p-4 pt-20">
	<section>
		<Hero />
	</section>
      <section id="skills" class="min-h-screen">
        <h2 class="text-3xl font-bold text-primary text-center mb-6">Skills</h2>
        <p class="text-center mb-6">Hier sind meine Fähigkeiten...</p>
      </section>

      <section id="about" class="min-h-screen">
        <h2 class="text-3xl font-bold text-primary text-center mb-6">Über uns</h2>
        <p class="text-center mb-6">Ich bin Anja Gollner, eine leidenschaftliche Selbstständige...</p>
      </section>

      <section id="portfolio" class="min-h-screen">
        <h2 class="text-3xl font-bold text-primary text-center mb-6">Portfolio</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <ServiceCard title="Beratung" description="Individuelle Beratung für dein Projekt." />
          <ServiceCard title="Design" description="Kreative Lösungen für dein Branding." />
        </div>
      </section>

      <section id="contact" class="min-h-screen">
        <h2 class="text-3xl font-bold text-primary text-center mb-6">Kontakt</h2>
        <p class="text-center mb-6">Schreib mir: <a href="mailto:anja@anjagollner.com" class="text-accent underline">anja@anjagollner.com</a></p>
      </section>
    </main>

    <Footer />
  </body>
</html>