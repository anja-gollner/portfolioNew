---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import '../styles/global.css';
import VideoSection from '../components/VideoSection.astro';
import FeaturesSection from '../components/FeaturesSection.astro';
import Contact from '../components/Contact.astro';
import Questions from '../components/Questions.astro';
import Timeline from '../components/Timeline.astro';
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Anja Gollner | Webdesign, Logo & Software – Freelancerin aus Österreich & Dubai</title>

    <meta name="description" content="Anja Gollner – Selbstständige Webentwicklerin, Designerin & Software Engineer. Maßgeschneiderte Websites, Logos & digitale Lösungen für Unternehmen & Selbstständige." />

    <meta name="keywords" content="Anja Gollner, Webdesign, Webentwicklung, Freelancer, Softwareentwicklung, Logo Design, Österreich, Selbstständig, Webdesignerin, moderne Webseiten" />

    <meta name="author" content="Anja Gollner" />
    <meta name="robots" content="index, follow" />

    <meta property="og:title" content="Anja Gollner | Web & Design Freelancerin" />
    <meta property="og:description" content="Webdesign, Logos & Softwarelösungen aus einer Hand – von Anja Gollner, deiner Freelancerin aus Österreich" />
    <meta property="og:image" content="https://www.anja-gollner.com/img/ag-preview.jpg" />
    <meta property="og:url" content="https://www.anja-gollner.com" />
    <meta property="og:type" content="website" />

    <link rel="icon" href="favicon.ico" type="image/x-icon" />
  </head>

  <body class="bg-neutral text-text overflow-x-hidden">
    <Header class="fixed top-0 left-0 w-full z-30 bg-neutral/80 backdrop-blur-sm" />
    <Hero id="hero" class="top-0 left-0 w-full h-screen z-[-1]" />

<main class="relative z-10 bg-white/90 backdrop-blur-sm">
	<FeaturesSection id="skills" />
	<VideoSection id="portfolio" />
	<Questions id="about" />
	<Timeline id="contact" />
	<Contact />
</main>


    <Footer class="relative z-10 bg-white" />
  </body>

  <style is:global>
    html, body {
      margin: 0;
      padding: 0;
      overflow-x: hidden;
      scroll-behavior: smooth;
    }

    main {
      position: relative;
      z-index: 10;
    }

    section {
      width: 100% !important;
      max-width: 100% !important;
      margin: 0;
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
  </style>